<!DOCTYPE html>
<html>

<head>
    <title>Conditional Statements</title>
</head>

<body>

    <script>

        var marks = 81

        if (marks < 60) {
            console.log("You failed in the exam!!")
        }

        else if (marks >= 60  && marks < 70) {
            console.log("You got B")
        }

        else if (marks >= 70 && marks < 80) {
            console.log("You got A")
        }

        else {
            console.log("You got A+! Excellent work!")
        }
    </script>
</body>

</html>
